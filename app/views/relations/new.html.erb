<% content_for :head do %>
    <%= title t('.title', :title => relation.from.title) %>
<% end %>

<div class="dark strip">
  <%= button_group do %>
      <%= arrowleft_button_link_to 'Cancelar', relation.from %>
  <% end %>
</div>

<%= simple_form_for relation do |form| %>
      <%= form.input :from_id, :as => :hidden %>
      <div class="input">
        <label>* 1. Art√≠culo</label>
        <%= relation.from.title %>
      </div>
      <%= form.input :user_category, :collection => tc('relations.categories', Relation::USER_CATEGORIES),
                     :value_method => :first, :label_method => :last, :include_blank => false %>
      <%= form.association :to,  :collection => Article.all(:order => 'title')%>
    <%= form.submit %>
<% end %>