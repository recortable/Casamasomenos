<%= div_for article do %>
    <div class="info">
      <ul class="relations">
        <% article.grouped_relations.each do |category, group| %>
            <li class="category">
              <span class="name"><%= category.es_name %>:&nbsp;</span>
              <% group.each do |relation| %>
                  <%= link_to relation.other.title, relation.other %>&nbsp;
              <% end %>
            </li>
        <% end %>
      </ul>
    </div>
    <div class="render body">
      <%= render_body article %>
    </div>
<% end %>
