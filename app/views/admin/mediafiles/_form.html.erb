<%= simple_form_for [:admin, mediafile] do |form| %>
    <%= form.input :resource_type, as: :hidden %>
    <%= form.input :resource_id, as: :hidden %>
    <%= form.input :title %>
    <%= form.input :description, as: :text %>
    <% if mediafile.new_record? %>
        <%= form.input :file %>
    <% else %>
        <div class="preview">
          <%= image_tag(mediafile.file.url) %>
        </div>
    <% end %>
    <%= form.submit %>
<% end %>