  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.class.name[0..-11].downcase %>">

<div class="container">
  <div class="container">
    <div id="flashes">
      <% flash.each do |name, msg| %>
          <%= content_tag :div, :class => "flash #{name}" do %>
              <%= msg %>
          <% end %>
      <% end %>
    </div>

    <div class="content">
      <%= yield %>
    </div>
  </div>
  <!-- /container -->
</div>

<%= render :partial => '/layouts/ga' %>
</body>
