<%= simple_form_for(article) do |f| %>
    <%= f.input :name %>
    <%= f.association :author, :include_blank => false %>
    <%= f.association :parent %>
    <%= f.input :body, :as => :text %>
    <div class="actions">
      <%= button_submit_tag 'Guardar' %>
      <%= link_to 'Cancelar', (article.new_record? ? articles_path : article_path(article)) %>
    </div>
<% end %>
