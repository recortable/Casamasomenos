<div class="strip">
  <ul class="properties">
    <li><label>Autor:</label><%= article.author.name %></li>
    <li><label>Está incluído en:</label><%= article.parent.title if article.parent %></li>
    <%= render :partial => 'mediafiles' %>
  </ul>
</div>
<%= simple_form_for(article) do |f| %>
    <%= f.input :title %>
    <%= f.input :body, :as => :text %>
    <div class="actions">
      <%= button_submit_tag 'Guardar' %>
      <%= link_to 'Cancelar', (article.new_record? ? articles_path : article_path(article)) %>
    </div>
<% end %>


