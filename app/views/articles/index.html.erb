<% content_for :head do %>
  <%= title 'Artículos' %>
<% end %>

<% if current_user? %>
    <div class="dark strip">
      <%= add_button_link_to 'Añadir artículo', new_article_path %>
    </div>
<% end %>

<div class="content">
<% categories.each do |category| %>
<h2><%= t("article.categories.prural.#{category.name}")%></h2>
      <%= render :partial => 'info', :collection => category.articles %>
<% end %>
</div>


